<canvas id="canvas"></canvas>

<div id="storyContainer"></div>
<button id="startBtn">âœ¨ Start Your Cosmic Story âœ¨</button>

<script>
const canvas = document.getElementById('canvas');
const ctx = canvas.getContext('2d');

function resize() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
}
window.addEventListener('resize', resize);
resize();

// ----------- Stars & Sparkles -----------
const stars = [];
for(let i=0;i<150;i++){
  stars.push({
    x: Math.random()*canvas.width,
    y: Math.random()*canvas.height,
    r: Math.random()*2+0.5,
    alpha: Math.random()*0.8+0.2,
    phase: Math.random()*Math.PI*2
  });
}
const sparkles = [];
function spawnSparkle(x,y){
  sparkles.push({
    x, y,
    r: Math.random()*3+1,
    alpha: 1,
    vx: (Math.random()-0.5)*1,
    vy: (Math.random()-0.5)*1,
    life: 60
  });
}

function animate(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  // draw stars
  for(let s of stars){
    const a = 0.5 + 0.5*Math.sin(performance.now()/1000 + s.phase);
    ctx.globalAlpha = s.alpha*a;
    ctx.fillStyle = '#fff';
    ctx.beginPath();
    ctx.arc(s.x,s.y,s.r,0,Math.PI*2);
    ctx.fill();
  }
  ctx.globalAlpha = 1;
  // draw sparkles
  for(let i=sparkles.length-1;i>=0;i--){
    const sp = sparkles[i];
    ctx.globalAlpha = sp.alpha;
    ctx.fillStyle = '#9ecbff';
    ctx.beginPath();
    ctx.arc(sp.x,sp.y,sp.r,0,Math.PI*2);
    ctx.fill();
    sp.x += sp.vx; sp.y += sp.vy; sp.life--;
    sp.alpha = sp.life/60;
    if(sp.life<=0) sparkles.splice(i,1);
  }
  requestAnimationFrame(animate);
}
animate();

// ----------- Story Fill-in -----------

const prompts = [
  {key:'number', text:'A huge number?', default:'9000'},
  {key:'creature1', text:'A magical creature (plural)?', default:'unicorns'},
  {key:'verb1', text:'A silly verb ending in -ing?', default:'moonwalking'},
  {key:'sound', text:'A funny sound?', default:'boing'},
  {key:'object1', text:'A random object (plural)?', default:'hats'},
  {key:'friend', text:"A friend's name?", default:'Alex'},
  {key:'object2', text:'Something you can wear?', default:'scarf'},
  {key:'verb2', text:'Another verb?', default:'leap'},
  {key:'stickyThing', text:'Something sticky?', default:'honey'},
  {key:'gooey', text:'Something gross?', default:'slime'},
  {key:'drink', text:'A liquid?', default:'tea'},
  {key:'bodyPart', text:'A body part (plural)?', default:'toes'},
  {key:'vehicle', text:'A mode of transportation?', default:'spacescooter'},
  {key:'mythical', text:'A mythical creature?', default:'dragon'},
  {key:'adjective', text:'An adjective?', default:'sparkly'},
  {key:'planet', text:'A planet?', default:'Jupiter'}
];

function startStory(){
  const answers = {};
  for(let p of prompts){
    answers[p.key] = prompt(p.text, p.default);
    spawnSparkle(Math.random()*canvas.width, Math.random()*canvas.height);
  }

  const story = `
We zoom across the stars at ${answers.number} light-years per second in our magical ship. 
I look out and see ${answers.creature1} ${answers.verb1} by, leaving trails of ${answers.sound} in the starlight. 
Suddenly, the ship jolts to a stop. I grab a box labeled "${answers.object1}" and find a ${answers.object2} that fits perfectly. 
${answers.friend} fastens it to me so I won't float away. 
I open the hatch and ${answers.verb2} outside, discovering ${answers.stickyThing} smeared across the deck. 
It must have come from the ${answers.gooey} cloud we passed yesterday. 
I sip some ${answers.drink} to steady myself while wiggling my ${answers.bodyPart}. 
Off in the distance, a ${answers.vehicle} approaches! 
â€œNeed a lift?â€ a voice calls. It's a ${answers.adjective} ${answers.mythical}! 
They offer to tow us back to ${answers.planet}, proving once again that the cosmos is full of surprises.
  `;

  const container = document.getElementById('storyContainer');
  container.textContent = story;
  container.style.display = 'block';
  document.getElementById('startBtn').style.display='none';
}

document.getElementById('startBtn').addEventListener('click', startStory);

</script>
</body>
</html>
